type Query {
    page(
        page: Int = 1,
        perPage: Int = 10,
        id: String,
        search: String
    ): Page

    anime(
        shikimoriId: String!
    ): Anime
}

type Mutation {
    loadDataSet(
        dataSet: [AnimeRaw!]!
    ): ResultMessage
}

type ResultMessage {
    message: String!
    total: Int!
}

type Page {
    pageInfo: PageInfo!
    media: [Anime!]!
}

type PageInfo {
    totalPages: Int
    currentPage: Int
    hasNextPage: Boolean
    lastPage: Int
    perPage: Int
}

type Anime {
    id: ID!
    title: Title
    synonyms: [String!]
    description: Description
    shikimoriScore: Float
    shikimoriUrl: String
    shikimoriId: String
    watchRating: String
    episodes: Int
    duration: Int
    externalLinks: [ExternalLink!]
    kind: Kind
    rating: Rating
    status: Status
    startDate: String
    endDate: String
    coverImage: CoverImage
    genres: [Genre!]
    studios: [String!]
    tags: [Tag!]
    averageScore: Float
    scoreCount: Int
    comments: [Comment!]
}

input AnimeRaw {
    title: TitleInput
    synonyms: [String!]
    description: DescriptionInput
    shikimoriScore: Float
    shikimoriUrl: String
    shikimoriId: String
    watchRating: String
    episodes: Int
    duration: Int
    externalLinks: [ExternalLinkInput!]
    kind: Kind
    rating: Rating
    status: StatusInput
    startDate: String
    endDate: String
    coverImage: CoverImageInput
    genres: [GenreInput!]
    studios: [String!]
    tags: [TagInput!]
}

type Title {
    EN: String
    RU: String
    ROMAJI: String
    NATIVE: String
}

input TitleInput {
    EN: String
    RU: String
    ROMAJI: String
    NATIVE: String
}

type Description {
    EN: String
    RU: String
}

input DescriptionInput {
    EN: String
    RU: String
}

type ExternalLink {
    source: String
    url: String
}

input ExternalLinkInput {
    source: String
    url: String
}

enum Kind {
    tv, movie, ova, ona, special, tv_special, music, cm
}

enum Rating {
    None, g, pg, pg_13, r, r_plus, rx
}

type Status {
    EN: String
    RU: String
}

input StatusInput {
    EN: String
    RU: String
}

type CoverImage {
    extraLarge: String
    large: String
    medium: String
    color: String
    banner: String
}

input CoverImageInput {
    extraLarge: String
    large: String
    medium: String
    color: String
    banner: String
}

type Genre {
    EN: String
    RU: String
}

input GenreInput {
    EN: String
    RU: String
}

type Comment {
    id: ID!
}

input CommentInput {
    id: ID!
}

type Tag {
    RU: TagTranslations
    EN: TagTranslations
    rank: Int
    isSpoiler: Boolean
}

input TagInput {
    RU: TagTranslationsInput
    EN: TagTranslationsInput
    rank: Int
    isSpoiler: Boolean
}

type TagTranslations {
    name: String
    description: String
}

input TagTranslationsInput {
    name: String
    description: String
}